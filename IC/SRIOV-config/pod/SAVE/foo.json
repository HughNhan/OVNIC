{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "foo-w1-sriov",
    "namespace": "default",
    "annotations": {
      "k8s.v1.multus-cni.io/networks": "east-sriov-net"
    }
  },
  "spec": {
    "restartPolicy": "Never",
    "nodeSelector": {
      "kubernetes.io/hostname": "worker-1"
    },
    "containers": [
      {
        "resources": {
            "requests": {
                "openshift.io/intelnic_east": "1"
            },
            "limits": {
                "openshift.io/intelnic_east": "1"
            }
        },

        "args": [
            "uperf -s -P 30100"
        ],
        "command": [
            "/bin/sh",
            "-c"
        ],
        "name": "1-server",
        "image": "quay.io/hnhan/ocp-tools:uperf",
        "imagePullPolicy": "Always",
        "securityContext": {
           "privileged": true
        },
        "env": [
          {
            "name": "cpu_partitioning",
            "value": "0"
          }
        ]
      }
    ]
  }
}
